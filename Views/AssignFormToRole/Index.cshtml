

<!DOCTYPE html>
<html>

<head>

    <link href="~/css/style.css" rel="stylesheet" />
    <style>

        .btn1 {
            float: right;
        }

        @@media (max-width:767px) {
            .btn1 {
                margin-left: 0px;
                justify-content: right;
                float: right
            }
        }
    </style>
    <link href="~/plugins/multi-select/css/multi-select.css" rel="stylesheet" />
   @* 
    
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />*@
</head>

<body>

    <section class="content">

        <div class="container-fluid">
            <div class="block-header">
                <h2>Assign Form To Role</h2>
            </div>
            <!-- Input -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="divInput" style="display:none">
                    <div class="card">
                        <div class="col-md-12">
                            <button type="button" id="btnClose" class="btn btn-danger btn1"><i class="material-icons">close</i></button>
                        </div>
                        <div class="body">

                            <div class="row clearfix">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <select id="role" class="form-control mt-3">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <select id="form" class="form-control mt-3">
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="form-line">

                                            <select id="action" class="form-control mt-3" multiple>
                                            </select>
                                           @* <select id="action" class="from-control" multiple></select>*@
                                        </div>
                                    </div>
                                </div>
                               

                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                       
                                        </div>
                                        <br />
                                        <button type="button" id="btnUpdate" class="btn btn-success  btn1" style="display:none"><i class="material-icons">update</i></button>
                                        <button type="button" id="btnSave" class="btn btn-success btn1"><i class="material-icons">save</i></button>
                                        <button type="button" id="btnClear" class="btn btn1"><i class="material-icons">brush</i></button>


                                        <div class="button-demo" style="margin-left:1020px">
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #END# Input -->
                    <!-- Textarea -->
                </div>
            </div>

            <!-- Basic Examples -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <button type="button" id="btnAdd" class="btn btn-primary"><i class="material-icons">person_add</i></button>
                            <ul class="header-dropdown m-r--5">

                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                                    </a>

                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table id="tblFormToRole" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                    <thead>
                                        <tr>
                                            <th>Role Name</th>
                                            <th>Form Name</th>
                                            <th>Action Name</th>
                                            <th>Action</th>
                                            
                                        </tr>
                                    </thead>

                                    <tbody>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Basic Examples -->

        </div>

    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>
    <script src="~/vendor/js/assignformtorole.js"></script>
    <!-- Multi Select Plugin Js -->
  @*  <script src="~/plugins/multi-select/js/jquery.multi-select.js"></script>
    <script src="~/plugins/bootstrap-select/js/bootstrap-select.min.js"></script>*@
    
</body>
</html>
